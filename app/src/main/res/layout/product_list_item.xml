<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="20dp"
    android:id="@+id/productRl">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productIV"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/honey"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/testcolorblue"
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/whitetransparent"
                    android:text="Fruit"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/cardview_default_radius"
                    android:paddingRight="@dimen/cardview_default_radius"/>
                <TextView
                    android:textColor="@color/testcolorblue"
                    android:id="@+id/descTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/whitetransparent"
                    android:text="Apple, Banana"
                    android:paddingLeft="@dimen/cardview_default_radius"
                    android:paddingRight="@dimen/cardview_default_radius"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location"
                        />
                    <TextView
                        android:textColor="@color/testcolorblue"
                        android:id="@+id/locationTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/whitetransparent"
                        android:text="Princer bazar"
                        android:paddingLeft="@dimen/cardview_default_radius"
                        android:paddingRight="@dimen/cardview_default_radius"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>